{
  "name": "Timeline-Maker",
  "author": "Dana Harris",
  "version": "1.0.1",
  "description": "Timeline Maker is a Proof of Concept for building a Windows app using Angular 10, Electron, NodeJS and Sqlite3 as its base.",
  "repository": "https://github.com/optikool/Timeline-Maker",
  "homepage": "http://www.eyenetdesigns.com",
  "main": "main.js",
  "packageManager": "npm",
  "build": {
    "appId": "com.eyenetdesigns.timelinemaker",
    "copyright": "Copyright eyenetdesigns.com",
    "publish": {
      "provider": "github"
    },
    "files": [
      "main.js",
      "updater.js",
      "dist/timeline-maker/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "asar": false,
      "certificateFile": "private/certificate.pfx",
      "publisherName": "eyenetdesigns"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "installerHeaderIcon": "build/installerIcon.ico",
      "installerIcon": "build/installerIcon.ico",
      "oneClick": false,
      "uninstallerIcon": "build/uninstallerIcon.ico",
      "include": "build/installer.nsh"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "linux": {}
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test  --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "generate": "node ./server/generate.js > ./server/database.json",
    "server": "json-server --watch ./server/database.json",
    "dev": "concurrently \"npm run server\" \"npm run start\"",
    "electron": "ng build && electron .",
    "electron-aot": "ng build --configuration production && electron .",
    "electron:rebuild": "electron-rebuild -f -w sqlite3",
    "electron:build": "electron-builder -w",
    "electron:wincert": "electron-builder create-self-signed-cert -p eyenetdesigns",
    "release": "electron-builder -w -p 'onTagOrDraft'",
    "cypress:open": "cypress open",
    "cypress:clear": "cypress cache clear",
    "cypress:verify": "cypress verify",
    "cypress:run": "cypress run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.0.2",
    "@angular/cdk": "^12.2.13",
    "@angular/common": "~13.0.2",
    "@angular/compiler": "~13.0.2",
    "@angular/core": "~13.0.2",
    "@angular/flex-layout": "^11.0.0-beta.33",
    "@angular/forms": "~13.0.2",
    "@angular/material": "^12.2.13",
    "@angular/platform-browser": "~13.0.2",
    "@angular/platform-browser-dynamic": "~13.0.2",
    "@angular/router": "~13.0.2",
    "@ngrx/effects": "^11.0.1",
    "@ngrx/entity": "^11.0.1",
    "@ngrx/schematics": "^11.0.1",
    "@ngrx/store": "^11.0.1",
    "@ngrx/store-devtools": "^11.0.1",
    "concurrently": "^5.3.0",
    "electron-compile": "^6.4.4",
    "electron-log": "^4.3.4",
    "electron-updater": "^4.3.8",
    "knex": "^0.21.19",
    "ngx-electron": "^2.2.0",
    "rxjs": "^6.6.6",
    "sqlite3": "^5.0.2",
    "tslib": "^2.1.0",
    "xvfb": "^0.4.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.0.3",
    "@angular/cli": "~13.0.3",
    "@angular/compiler-cli": "~13.0.2",
    "@types/jasmine": "^3.6.7",
    "@types/node": "^12.20.6",
    "codelyzer": "^6.0.0",
    "cypress": "^6.8.0",
    "electron": "^11.3.0",
    "electron-builder": "^22.10.5",
    "electron-prebuilt-compile": "^8.2.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "^4.4.4"
  }
}